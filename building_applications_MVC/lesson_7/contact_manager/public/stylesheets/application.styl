@import "reset.css"
body 
  font-family: 'Aref Ruqaa', serif
  font-size: 14px
  header
    background: #63478d
    text-align: center
    padding-top: 30px
    padding-bottom: 30px
    p
      color: #cdbee5
      font-size: 24px
    h1
      color: #fff
      font-size: 36px
      font-weight: 400
      letter-spacing: 0.70px
      padding-bottom: 15px
      a
        text-decoration:none
        color: #fff
  main 
    nav
      width: 95%
      margin: 0 auto
      background: #f5f5f5
      box-sizing: border-box
      border: 1px solid #e5e5e5
      border-radius: 4px
      padding: 22px 0 22px 0
      .add_contact
        display:inline-block
        box-sizing: border-box
        text-align: center
        width: 49%
        a.add    
          text-decoration:none   
          font-size: 18px
          display: inline-block
          padding: 10px 16px
          color: #563d7c
          border: 1px solid  #563d7c;
          border-radius: 6px
        a.add:hover
          background: #563d7c
          color: #fff
      .search
          display: inline-block
          box-sizing: border-box
          width: 49%
          text-align: center
          input
            padding: 7px 10px
            font-size: 15px
            border-radius: 6px
            border: 1px solid #e7e7e7
            width: 40%
            &:active 
              border-color: #00ccff
    .no_contact
      display:none

    .contacts
      text-align: center
      h2
        font-size:24px
      ul
        background: red
        li
          display:inline-block
          width: 25%
          border-bottom: 1px solid #e7e7e7
          a
            text-decoration:none
            padding-right:20px
          
    h2
      margin-top: 30px
      margin-bottom: 10px
      font-size:24px
      text-align:center
    form
      margin-left: 5%
      margin-right: 5%   
      text-align: center
      border-top: 1px solid #e7e7e7
      border-bottom: 1px solid #e7e7e7
      div.blocks     
        margin-top: 20px
        width: 100%
        div
          display:inline-block
          width: 25%
          input
            width: 100%
            padding:7px 0
        
        label
          display:inline-block
          width: 20.33%
          text-align:right
          padding-right: 15px
      div.submission
        margin-top:20px
        
        input,a
          display:inline-block
          padding: 10px 50px
          border-radius: 6px
          border: 1px solid #63478d
          color: #63478d
          background: #fff
          &:hover
            background: #63478d
            color: #fff
        input
          margin-left:22%
          margin-right: 2%
          cursor: pointer
        a
          text-decoration: none
          font-size: 10px
        
          
        
          
          
          
      
          
          
  footer
    font-size:16px
    text-align: center
      
      
      
         

    

  
  